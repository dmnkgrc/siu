{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"@trivago/prettier-plugin-sort-imports"
	],
	"pluginSearchDirs": false,
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrder": ["<THIRD_PARTY_MODULES>", "^$lib/(.*)$", "^[./]"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
